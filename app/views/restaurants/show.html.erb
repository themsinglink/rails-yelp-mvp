<h1><%= @restaurant.name %></h1>

<ul>

<li><%= @restaurant.address %></li>

<li><%= @restaurant.category %></li>

</ul>

<p><%= link_to 'add a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary"%></p>

<ul class="list-unstyled">Latest review:
  <% @restaurant.reviews.all.each do |review| %>
    <li>guest comment: <%= review.content %></li>
    <li>guest rating:<%= review.rating %></li>
  <% end %>
</ul>


